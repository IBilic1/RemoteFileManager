<Application x:Class="RemoteFileManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RemoteFileManager"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ImageBrush x:Key="GradientBackgournd" ImageSource="/Assets/gradient.png"></ImageBrush>

        <Style x:Key="basicForegraound" TargetType="Control">
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource basicForegraound}">
            <Setter Property="Background" Value="#ff384189"></Setter>
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
        </Style>

        <Style TargetType="ListBox" BasedOn="{StaticResource basicForegraound}">
            <Setter Property="Background" Value="#ff384189"></Setter>
        </Style>

        <Style TargetType="Label" BasedOn="{StaticResource basicForegraound}"/>

        <Style TargetType="Button" BasedOn="{StaticResource basicForegraound}"/>

    </Application.Resources>
</Application>
